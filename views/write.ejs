<!DOCTYPE html>
<html>

<head>
    <title>写文章</title>
    <%- include head %>
</head>

<body>
    <%- include('bar', {username: username}) %>

    <div class="article">
        <form action="/article/add" method="post">
            <input type="hidden" name="id" value="<%- data.id %>">
            <input type="hidden" name="page" value="<%- data.page %>">
            <input type="text" name="title" placeholder="请输入文章标题" value="<%=data.title%>">
            <textarea name="content" class="xheditor"><%- data.content %></textarea>
            <%if(data.id){%>
                <input type="submit" value="保存">
            <%}else{%>
                <input type="submit" value="发布">
            <%}%>
        </form>
    </div>
    <script type="text/javascript" src="/javascripts/xheditor-1.2.2/jquery/jquery-1.4.4.min.js"></script>
    <script type="text/javascript" src="/javascripts/xheditor-1.2.2/xheditor-1.2.2.min.js"></script>
    <script type="text/javascript" src="/javascripts/xheditor-1.2.2/xheditor_lang/zh-cn.js"></script>
    <script>
        $('.xheditor').xheditor({
            tools: 'full',
            skin: 'default',
            upImgUrl: '/article/upload',
            html5Upload: false,
            upMultiple: 1
        });
    </script>
</body>

</html>
